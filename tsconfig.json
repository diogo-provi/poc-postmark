{
  "compilerOptions": {
    "incremental": true,
    "target": "es2019",
    "moduleResolution": "node",
    "module": "commonjs",
    "lib": [
      "es2019"
    ],
    "declaration": true,
    "outDir": "lib",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "resolveJsonModule": true,
    "alwaysStrict": true,
    "removeComments": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "baseUrl": "./",
    "rootDirs": [
      "./src"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./node_modules/*",
    "lib"
  ]
}